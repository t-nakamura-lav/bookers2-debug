<table class='table'>
  <tr><%= attachment_image_tag(user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
  <tr>
    <th>follows</th>
    <th><%= user.followings.count %></th>
  </tr>
  <tr>
    <th>followers</th>
    <th><%= user.followers.count %></th>
  </tr>
  <tr>
    <th>
      <% if user == current_user %>
        <div class='row'>
          <%= link_to '',edit_user_path(user),class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user_#{user.id}" %>
        </div>
      <% else %>
        <% if current_user.following?(user) %>
          <%= link_to "フォローを外す", user_relationships_path(user.id), method: :delete, class: "btn btn-sm btn-danger" %>
        <% else %>
          <%= link_to "フォローをする", user_relationships_path(user.id), method: :post, class: 'btn btn-success' %>
        <% end %>
      <% end %>

    </th>
  </tr>
</table>

